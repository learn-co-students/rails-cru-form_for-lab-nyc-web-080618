<h1>Song Form</h1>

<%= form_for @song do |f| %>
  <%= f.label 'Song Name' %>
  <%= f.text_field :name, id: 'song[name]' %>

  <%= f.label 'Song Artist' %>
  <%= f.text_field :artist_id, id: 'song[artist_id]' %>

  <%= f.label 'Song Genre' %>
  <%= f.text_field :genre_id, id: 'song[genre_id]' %>

  <%= f.submit 'Update Song' %>
<% end %>
